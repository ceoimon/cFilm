          lablel.col-sm-2.control-label(for="inputPoster") Poster Address
          .col-sm-10
            input#inputTitle.form-control(type="text", name="movie[poster]", value="#{movie.poster}")
        .form-group
          lablel.col-sm-2.control-label(for="inputYear") Year
          .col-sm-10
            input#inputTitle.form-control(type="text", name="movie[year]", value="#{movie.year}")
        .form-group
          lablel.col-sm-2.control-label(for="inputDuration") Duration
          .col-sm-10
            input#inputTitle.form-control(type="text", name="movie[duration]", value="#{movie.duration}")
        .form-group
          lablel.col-sm-2.control-label(for="inputStars") Stars
          .col-sm-10
            input#inputTitle.form-control(type="text", name="movie[stars]", value="#{movie.stars}")
        .form-group
          lablel.col-sm-2.control-label(for="inputSummary") Summary
          .col-sm-10
            input#inputTitle.form-control(type="text", name="movie[summary]", value="#{movie.summary}")
        .form-group
          .col-sm-offset-2.col-sm-10
            button.btn.btn-default(type="submit") Record